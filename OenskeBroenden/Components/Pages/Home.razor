@page "/"
@page "/{WishListId:int}"

@using ComponentLib.Components;

@if (ready)
{
    @if (modal)
    {
        <CreateWishlistModal CloseModal="(() => ShowCreateListModal(false))" CreateModal="CreateWishlist" />
    }

    @if (addWish)
    {
        <CreateWishModal CloseModal="ToggleAddWish" CreateModal="CreateWish" WishListId="SelectedList.Id" />
    }

    @if(editWish)
    {
        <EditDeleteWishModal CloseModal="UpdateWish" Wish="WishCreateForm" />
    }

        <div class="PageCss">
            <div class="sideBar">
                <h1 @onclick="HomeButton" class="sidebarHeader"><b>Dine</b> Ønskelister</h1>
                <WishListComp Cookie="Cookie" ShowCreateModal="ShowCreateListModal" LoadWishList="LoadWishlistAsync" />
            </div>
            <div class="mainpage">
            <MyWishListComp Cookie="Cookie" WishList="SelectedList" AddWish="ToggleAddWish" WishListOwner="wishListOwner" EditWish="ToggleEditWishAsync" ReserveWish="ReserveWishAsync" />
        </div>

        </div>
    
 
    

}
